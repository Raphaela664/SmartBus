@page
@model SmartBus.Pages.Admin.RegisterBusModel
@{
}
<br />
<h2>Register New Bus</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
<form method="POST">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Bus ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="BusId" value="@Model.bus.BusId" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Bus name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.bus.BusName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Total seats</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="totalseats" value="@Model.bus.TotalSeats" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/MedicalRecords/Index" role="button">Cancel</a>
        </div>
    </div>
</form>
